<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{
        var user = Session["User"] as PlaceMe.Models.User; 
        }
</head>
<style>
    
    #header{
        font-size:35px;
    }
    .li, .dropdown-toggle {
        font-size: 20px;
    }
</style>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="header">@Html.ActionLink("PlaceMe", "HomePage", "User")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Welcome! @user.UserFirstName @user.UserLastName<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="li">@Html.ActionLink("Edit Profile", "EditProfile", "User")</li>
                            <li class="li">@Html.ActionLink("Edit Qualification Details", "QualificationDetails", "User")</li>
                            <li class="li">@Html.ActionLink("My Schedules", "Schedule", "User")</li>
                            <li class="li">@Html.ActionLink("Logout", "UserLogout", "Authentication")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
