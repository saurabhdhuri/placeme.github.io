<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{
        var admin = Session["Admin"] as PlaceMe.Models.Admin;
    }
</head>
<style>
    .navbar {
        background-color: dodgerblue;
    }
    #header {
        font-size: 35px;
    }

    .li, .dropdown-toggle {
        font-size: 20px;
    }
    
</style>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="header">@Html.ActionLink("Dashboard", "Dashboard", "Admin")</li>
                    <li class="li">@Html.ActionLink("Companies", "ManageCompanies", "Admin")</li>
                    <li class="li">@Html.ActionLink("Users", "ManageUsers", "Admin")</li>
                    <li class="li">@Html.ActionLink("User Applications", "ManageUserApplications", "Admin")</li>
                    <li class="li">@Html.ActionLink("User Schedules", "ManageUserSchedule", "Admin")</li>
                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Welcome! @admin.AdminName<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Logout", "AdminLogout", "Authentication")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
